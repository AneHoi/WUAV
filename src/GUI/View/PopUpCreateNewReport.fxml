<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="-Infinity" prefHeight="632.0" prefWidth="645.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <center>
          <VBox spacing="45.0" BorderPane.alignment="CENTER">
              <children>
                  <TextField fx:id="txtReportName" prefHeight="50.0" prefWidth="300.0" promptText="Report Name..." styleClass="textFields">
                      <VBox.margin>
                          <Insets left="25.0" right="25.0" top="20.0" />
                      </VBox.margin>
                      <tooltip>
                          <Tooltip text="Report name" />
                      </tooltip>
                  </TextField>
                  <TextArea fx:id="txtReportDescription" prefHeight="300.0" prefWidth="300.0" promptText="Report Description..." style="-fx-: Black;" styleClass="CaseHomePageTextArea" wrapText="true">
                      <VBox.margin>
                          <Insets left="25.0" right="25.0" />
                      </VBox.margin>
               <tooltip>
                  <Tooltip text="Report description" />
               </tooltip>
                  </TextArea>
                  <Button fx:id="btnCreateNewReport" mnemonicParsing="false" onAction="#handleCreateNewReport" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New Report" underline="true">
                      <VBox.margin>
                          <Insets left="25.0" />
                      </VBox.margin>
                  </Button>
              </children>
          </VBox>
   </center>
   <top>
          <Label fx:id="lblCaseName" text="Create new report" underline="true" BorderPane.alignment="CENTER">
              <font>
                  <Font name="System Bold" size="40.0" />
              </font>
              <BorderPane.margin>
                  <Insets left="25.0" />
              </BorderPane.margin>
          </Label>
   </top>
    <stylesheets>
        <URL value="@css/tableview.css" />
        <URL value="@css/Main.css" />
        <URL value="@css/fonts.css" />
    </stylesheets>
</BorderPane>
