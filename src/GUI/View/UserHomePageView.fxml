<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="1.7976931348623157E308" prefHeight="466.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.UserHomePageController">
    <top>
        <Label fx:id="lblWelcomeUser" alignment="TOP_LEFT" styleClass="headingLabel" text="Welcome User" underline="true" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets left="25.0" />
            </BorderPane.margin>
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
        </Label>
    </top>
    <center>
        <HBox spacing="80.0" BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label prefHeight="40.0" prefWidth="400.0" styleClass="underHeadingLabel" text="Your active cases:" underline="true">
                            <VBox.margin>
                                <Insets left="25.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tblViewActiveCases" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="1000.0" prefWidth="1000.0">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                            <columns>
                                <TableColumn fx:id="colCustomerActiveCases" prefWidth="75.0" style="-fx-alignment: center;" text="Customer" />
                                <TableColumn fx:id="colAddressActiveCases" prefWidth="75.0" style="-fx-alignment: center;" text="Address" />
                                <TableColumn fx:id="colTechnicians" prefWidth="75.0" style="-fx-alignment: center;" text="Technicians" />
                                <TableColumn fx:id="colCaseDate" prefWidth="75.0" style="-fx-alignment: center;" text="Case Date" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label prefHeight="40.0" prefWidth="400.0" styleClass="underHeadingLabel" text="Recently viewed customers:" underline="true">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="25.0" />
                            </VBox.margin>
                        </Label>
                        <TableView fx:id="tblViewViewedCustomers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="1000.0" prefWidth="1000.0">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                            <columns>
                                <TableColumn fx:id="colCustomerViewed" prefWidth="75.0" style="-fx-alignment: center;" text="Customer" />
                                <TableColumn fx:id="colAddressViewed" prefWidth="75.0" style="-fx-alignment: center;" text="Address" />
                                <TableColumn fx:id="colActiveCases" prefWidth="75.0" style="-fx-alignment: center;" text="Active Cases" />
                                <TableColumn fx:id="colCVR" prefWidth="75.0" style="-fx-alignment: center;" text="CVR" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" top="20.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <stylesheets>
        <URL value="@css/tableview.css" />
        <URL value="@css/Main.css" />
        <URL value="@css/fonts.css" />
    </stylesheets>
</BorderPane>
