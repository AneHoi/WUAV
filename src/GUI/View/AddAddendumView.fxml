<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane stylesheets="@Main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Add Addendum to Report:" underline="true">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="lblReportName" text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtAddendumName" prefHeight="50.0" prefWidth="300.0" promptText="Addendum Name..." styleClass="textFields">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="txtAddendumDescription" prefHeight="300.0" prefWidth="300.0" promptText="Addendum Description..." style="-fx-: Black;" styleClass="CaseHomePageTextArea" wrapText="true">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="btnCreateNewAddendum" mnemonicParsing="false" onAction="#handleCreateNewAddendum" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New Addendum" underline="true">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
