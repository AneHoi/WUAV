<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <Label fx:id="lblCreateOrUpdate" text="Label" underline="true">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Label fx:id="lblCaseName" text="Label">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
            <TextField fx:id="txtCaseName" prefHeight="50.0" prefWidth="300.0" promptText="Case Name..." styleClass="textFields">
            </TextField>
            <TextField fx:id="txtContactPerson" prefHeight="50.0" prefWidth="300.0" promptText="Contact Person..." styleClass="textFields">
            </TextField>
            <TextArea fx:id="txtCaseDescription" prefHeight="300.0" prefWidth="300.0" promptText="Case Description" style="-fx-: Black;" styleClass="CaseHomePageTextArea" wrapText="true">
            </TextArea>
            <Button fx:id="btnCreateOrUpdateCase" mnemonicParsing="false" onAction="#handleCreateOrUpdateCase" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Case" underline="true">
            </Button>
         <BorderPane.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@css/tableview.css" />
        <URL value="@css/Main.css" />
        <URL value="@css/fonts.css" />
    </stylesheets>
</BorderPane>
