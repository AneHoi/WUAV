<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@Main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="lblCreateOrUpdate" text="Label" underline="true">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="lblCaseName" text="Label">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="txtCaseName" prefHeight="50.0" prefWidth="300.0" promptText="Case Name..." styleClass="textFields">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" top="25.0" />
                    </VBox.margin>
                </TextField>
            <TextField fx:id=" prefHeight="50.0" prefWidth="300.0" promptText="Contact Person..." styleClass="textFields">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
                <TextArea fx:id="txtCaseDescription" prefHeight="300.0" prefWidth="300.0" promptText="Case Description" style="-fx-: Black;" styleClass="CaseHomePageTextArea" wrapText="true">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin>
                </TextArea>
                <Button fx:id="btnCreateOrUpdateCase" mnemonicParsing="false" onAction="#handleCreateOrUpdateCase" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Case" underline="true">
                    <VBox.margin>
                        <Insets bottom="25.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
