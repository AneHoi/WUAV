<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.ChangePasswordController">
   <top>
      <ImageView fx:id="imgWUAVLogo" fitHeight="75.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets right="20.0" top="20.0" />
         </BorderPane.margin></ImageView>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <PasswordField fx:id="pswOldPassword" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" promptText="Old password">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="pswNewPassword" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" promptText="New password">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="pswNewPasswordCheck" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" promptText="New password">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnChangePassword" mnemonicParsing="false" onAction="#handleChangePassword" prefWidth="120.0" text="Change" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <stylesheets>
      <URL value="@css/tableview.css" />
      <URL value="@css/Main.css" />
      <URL value="@css/fonts.css" />
   </stylesheets>
</BorderPane>
