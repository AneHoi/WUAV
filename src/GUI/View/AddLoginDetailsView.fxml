<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Add Login Details:" underline="true" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Label text="Component:">
                            <VBox.margin>
                                <Insets bottom="-25.0" top="25.0" />
                            </VBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                        </Label>
                        <TextField fx:id="txtComponent">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                        </TextField>
                        <HBox spacing="10.0">
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label prefHeight="51.0" text="Username:">
                                 <font>
                                    <Font size="20.0" />
                                 </font></Label>
                                        <Label minHeight="51.0" text="Password:">
                                 <font>
                                    <Font size="20.0" />
                                 </font></Label>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtUsername" />
                                        <TextField fx:id="txtPassword" />
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                        </HBox>
                        <Label text="Additional  Info:">
                            <VBox.margin>
                                <Insets bottom="-25.0" />
                            </VBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                        </Label>
                        <TextArea fx:id="txtAdditionalInfo" prefHeight="200.0" prefWidth="200.0" styleClass="CaseHomePageTextArea" wrapText="true">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                        </TextArea>
                        <CheckBox fx:id="checkBoxNoLogin" mnemonicParsing="false" text="No login details for this report">
                     <font>
                        <Font size="20.0" />
                     </font></CheckBox>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <Button fx:id="btnSaveLoginDetails" mnemonicParsing="false" onAction="#handleSaveLoginDetails" text="Save Login Details" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
    <stylesheets>
        <URL value="@css/tableview.css" />
        <URL value="@css/Main.css" />
        <URL value="@css/fonts.css" />
    </stylesheets>
</BorderPane>
