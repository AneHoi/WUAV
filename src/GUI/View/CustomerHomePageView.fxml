<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="632.0" prefWidth="1155.0" stylesheets="@css/tableview.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CustomerHomePageView">
   <top>
      <BorderPane BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <left>
            <Label fx:id="lblCustomerName" text="Label" underline="true" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Label>
         </left>
         <right>
            <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgBack" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="Back" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgForward" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="Forward" />
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="25.0" right="25.0" top="25.0" />
               </BorderPane.margin>
            </HBox>
         </right>
      </BorderPane>
   </top>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="67.0" prefWidth="295.0">
                     <children>
                        <TextField fx:id="txtSearchBar" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" promptText="Search for a Case">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                        <ImageView fx:id="imgSearch" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets right="25.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                     <VBox.margin>
                        <Insets top="-40.0" />
                     </VBox.margin>
                  </HBox>
                  <Label text="Search through existing cases:" underline="true">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="tblViewExistingCases" prefHeight="450.0" prefWidth="800.0">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <columns>
                        <TableColumn fx:id="colCaseName" prefWidth="75.0" text="Case Name" />
                        <TableColumn fx:id="colCaseID" prefWidth="75.0" text="Case ID" />
                        <TableColumn fx:id="colCaseDescription" prefWidth="75.0" text="Case Description" />
                        <TableColumn fx:id="colCreatedDate" prefWidth="75.0" text="Created  Date" />
                     </columns>
                     <VBox.margin>
                        <Insets right="25.0" />
                     </VBox.margin>
                  </TableView>
               </children>
               <HBox.margin>
                  <Insets bottom="25.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" spacing="43.0">
               <children>
                  <TableView fx:id="tblViewTechAssigned" prefHeight="200.0" prefWidth="250.0">
                    <columns>
                      <TableColumn fx:id="colTechAssigned" prefWidth="75.0" text="Technicians Assigned" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TableView>
                  <Button fx:id="btnManageTech" mnemonicParsing="false" onAction="#handleManageTech" prefWidth="200.0" styleClass="orangeButtons" text="Manage Technicians" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdateCase" mnemonicParsing="false" onAction="#handleUpdateCase" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Update Case" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCreateNewCase" mnemonicParsing="false" onAction="#handleCreateNewCase" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New Case" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets left="25.0" right="25.0" />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="25.0" />
               </HBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
