<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="632.0" prefWidth="1155.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CustomerHomePageView">
   <top>
      <Label fx:id="lblCustomerName" text="Label" underline="true" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="45.0">
               <children>
                  <TextField fx:id="txtCaseName" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Case Name..." styleClass="textFields">
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" top="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="txtCaseID" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Case ID..." styleClass="textFields">
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="txtContactPerson" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Contact Person..." styleClass="textFields">
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <Button fx:id="btnCreateNewCase" mnemonicParsing="false" onAction="#handleCreateNewCase" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New Case" underline="true">
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="67.0" prefWidth="295.0">
                     <children>
                        <TextField fx:id="txtSearchBar" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" promptText="Search for a Case">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                        <ImageView fx:id="imgSearch" fitHeight="40.0" fitWidth="40.0" onKeyPressed="#searchKey" onMouseClicked="#search" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets right="25.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                     <VBox.margin>
                        <Insets top="-40.0" />
                     </VBox.margin>
                  </HBox>
                  <Label text="Search Through Existing Cases:" underline="true">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="tblViewExistingCases" prefHeight="450.0" prefWidth="600.0">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <columns>
                        <TableColumn fx:id="colCaseName" prefWidth="75.0" text="Case Name" />
                        <TableColumn fx:id="colCaseID" prefWidth="75.0" text="Case ID" />
                        <TableColumn fx:id="colTechnicians" prefWidth="75.0" text="Technician(s)" />
                        <TableColumn fx:id="colCreatedDate" prefWidth="75.0" text="Created  Date" />
                     </columns>
                     <VBox.margin>
                        <Insets right="25.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="45.0">
               <children>
                  <ComboBox fx:id="cbTechnician" prefHeight="50.0" prefWidth="150.0" promptText="Technician">
                     <VBox.margin>
                        <Insets top="-320.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Button fx:id="btnAddTechnician" mnemonicParsing="false" onAction="#handleAddTechnician" prefHeight="35.0" prefWidth="100.0" text="Add" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets left="25.0" right="25.0" />
               </opaqueInsets>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
