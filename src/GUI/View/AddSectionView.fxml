<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" style="-fx-background-color: #333333;"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Text fill="WHITE" layoutX="5.0" layoutY="8.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Section"
              underline="true" x="35.0" y="47.0">
            <font>
                <Font size="32.0"/>
            </font>
        </Text>
        <TextField fx:id="txtSectionTitle" layoutX="40.0" layoutY="75.0" prefHeight="40.0" prefWidth="450.0"
                   style="-fx-background-color: #D9D9D9;" text="Section title..."/>
        <TextField fx:id="txtSketchPath" layoutX="40.0" layoutY="125.0" prefHeight="40.0" prefWidth="150.0"
                   style="-fx-background-color: #D9D9D9;" text="Sketch path"/>
        <TextField fx:id="txtSketchComment" layoutX="40.0" layoutY="175.0" prefHeight="40.0" prefWidth="450.0"
                   style="-fx-background-color: #D9D9D9;" text="Sketch comment"/>
        <TextField fx:id="txtImagePath" layoutX="40.0" layoutY="225.0" prefHeight="40.0" prefWidth="150.0"
                   style="-fx-background-color: #D9D9D9;" text="Image path"/>
        <TextField fx:id="txtImageComment" layoutX="40.0" layoutY="275.0" prefHeight="40.0" prefWidth="450.0"
                   style="-fx-background-color: #D9D9D9;" text="Image comment"/>
        <TextField fx:id="txtDescription" alignment="TOP_LEFT" layoutX="40.0" layoutY="325.0" prefHeight="200.0"
                   prefWidth="450.0" style="-fx-background-color: #D9D9D9;" text="Description"/>
        <Button fx:id="btnAddSketch" layoutX="220.0" layoutY="125.0" mnemonicParsing="false" prefHeight="40.0"
                prefWidth="100.0" style="-fx-background-color: #D9D9D9;" text="Add Sketch"/>
        <Button fx:id="btnAddImage" layoutX="220.0" layoutY="225.0" mnemonicParsing="false" prefHeight="40.0"
                prefWidth="100.0" style="-fx-background-color: #D9D9D9;" text="Add Image"/>
        <Button fx:id="btnSubmitSection" layoutX="580.0" layoutY="530.0" mnemonicParsing="false" prefHeight="50.0"
                prefWidth="150.0" style="-fx-background-color: #E84910;" text="Submit" textFill="WHITE"
                underline="true">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Button>
        <ImageView fx:id="imgViewLogo" fitHeight="112.97" fitWidth="180.0" pickOnBounds="true" preserveRatio="true"
                   x="550.0" y="20.0"/>
    </children>
</AnchorPane>
