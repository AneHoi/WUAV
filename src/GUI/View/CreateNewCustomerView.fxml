<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="632.0" prefWidth="1155.0" style="-fx-background-color: FFFFFF;" stylesheets="@Main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CreateNewCustomerView">
   <center>
      <HBox spacing="150.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="45.0">
               <children>
                  <TextField fx:id="txtCostumerName" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Customer Name..." styleClass="backgroundAndWhiteText">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" top="25.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtAddress" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Address..." styleClass="backgroundAndWhiteText">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtTlfNumber" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Telefonenumber..." styleClass="backgroundAndWhiteText">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtEmail" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Email..." styleClass="backgroundAndWhiteText">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtCVR" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="CVR..." styleClass="backgroundAndWhiteText">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="btnCreateCostumer" mnemonicParsing="false" onAction="#saveCostumer" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: E84910;" styleClass="roundedEdges" text="Create New Customer" textFill="WHITE" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox>
               <children>
                  <HBox fx:id="hBoxSearch" alignment="BOTTOM_RIGHT" prefHeight="67.0" prefWidth="295.0">
                     <children>
                        <TextField fx:id="txtSearchBar" alignment="CENTER" prefHeight="29.0" prefWidth="200.0" promptText="Search for a Customer">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                        <ImageView fx:id="imgSearch" fitHeight="39.0" fitWidth="35.0" onKeyPressed="#search" onMouseClicked="#search" pickOnBounds="true" preserveRatio="true">
                        </ImageView>
                     </children>
                     <VBox.margin>
                        <Insets top="-40.0" />
                     </VBox.margin>
                  </HBox>
                  <Label text="Search through existing customers:" underline="true" wrapText="true">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="tableviewCostumers" prefHeight="450.0" prefWidth="600.0">
                    <columns>
                      <TableColumn fx:id="clmCostumerName" prefWidth="140.0" text="Costumer" />
                      <TableColumn fx:id="clmAddress" text="Address" />
                        <TableColumn fx:id="clmCVR" prefWidth="85.0" text="CVR" />
                        <TableColumn fx:id="clmCreatedDate" prefWidth="100.0" text="Created date" />
                    </columns>
                     <VBox.margin>
                        <Insets right="25.0" />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <Label prefHeight="58.0" prefWidth="414.0" text="Create new costumer" underline="true" wrapText="true" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
