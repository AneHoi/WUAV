<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<VBox alignment="TOP_CENTER" prefHeight="647.0" prefWidth="373.0" spacing="45.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Create New User" underline="true">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtFullNameCreate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Full Name..." styleClass="textFields">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" right="25.0" top="25.0" />
         </VBox.margin>
         <tooltip>
            <Tooltip text="Full name" />
         </tooltip>
      </TextField>
      <TextField fx:id="txtUserNameCreate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="User Name..." styleClass="textFields">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" right="25.0" />
         </VBox.margin>
         <tooltip>
            <Tooltip text="User name" />
         </tooltip>
      </TextField>
      <TextField fx:id="txtTelephoneCreate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Telephone Number..." styleClass="textFields">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" right="25.0" />
         </VBox.margin>
         <tooltip>
            <Tooltip text="Telephone number" />
         </tooltip>
      </TextField>
      <TextField fx:id="txtEmailCreate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Email..." styleClass="textFields">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" right="25.0" />
         </VBox.margin>
         <tooltip>
            <Tooltip text="Email" />
         </tooltip>
      </TextField>
      <ComboBox fx:id="cbUserTypeCreate" prefHeight="50.0" prefWidth="250.0" promptText="User type">
         <VBox.margin>
            <Insets left="25.0" right="25.0" />
         </VBox.margin>
      </ComboBox>
      <Button fx:id="btnCreateNewUser" mnemonicParsing="false" onAction="#handleCreateNewUser" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New User" underline="true">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" />
         </VBox.margin>
      </Button>
   </children>
   <stylesheets>
      <URL value="@css/tableview.css" />
      <URL value="@css/Main.css" />
      <URL value="@css/fonts.css" />
   </stylesheets>
</VBox>
