<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="632.0" prefWidth="1155.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CreateUserController">
   <top>
      <Label text="Create New User" underline="true" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="532.0" prefWidth="811.0">
               <children>
                  <Label text="Existing Users:" underline="true">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" top="25.0" />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="tblViewExistingUsers" prefHeight="400.0" prefWidth="640.0">
                     <columns>
                        <TableColumn fx:id="colName" prefWidth="75.0" style="-fx-alignment: center;" text="Name" />
                        <TableColumn fx:id="colUserName" prefWidth="75.0" style="-fx-alignment: center;" text="User Name" />
                        <TableColumn fx:id="colUserType" prefWidth="75.0" style="-fx-alignment: center;" text="User Type" />
                        <TableColumn fx:id="colStatus" prefWidth="75.0" style="-fx-alignment: center;" text="Status" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </TableView>
                  <Button fx:id="btnCreateNewUser" mnemonicParsing="false" onAction="#handleCreateNewUser" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New User" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox spacing="45.0">
               <children>
                  <TextField fx:id="txtFullNameUpdate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Full Name..." styleClass="textFields">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" top="25.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip text="Full name" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="txtUserNameUpdate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="User Name..." styleClass="textFields">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip text="User name" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="txtTelephoneUpdate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Telephone Number..." styleClass="textFields">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip text="Telefon number" />
                     </tooltip>
                  </TextField>
                  <TextField fx:id="txtEmailUpdate" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" promptText="Email..." styleClass="textFields">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip text="Email" />
                     </tooltip>
                  </TextField>
                  <ComboBox fx:id="cbUserActive" prefHeight="50.0" prefWidth="250.0" promptText="User Active?">
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Button fx:id="btnUpdateUser" mnemonicParsing="false" onAction="#handleUpdateUser" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Update User Info" underline="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </center>
   <stylesheets>
      <URL value="@css/tableview.css" />
      <URL value="@css/Main.css" />
   </stylesheets>
</BorderPane>
