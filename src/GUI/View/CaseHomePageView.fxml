<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="-Infinity" prefHeight="632.0" prefWidth="1155.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CaseHomePageView">
    <top>
        <BorderPane>
            <left>
                <Label fx:id="lblCaseName" text="Label" underline="true" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets left="25.0" />
                    </BorderPane.margin>
                </Label>
            </left>
            <right>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="imgBack" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fx:id="imgForward" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="25.0" right="25.0" top="25.0" />
                    </BorderPane.margin>
                </HBox>
            </right>
        </BorderPane>
    </top>
    <stylesheets>
        <URL value="@css/Main.css" />
        <URL value="@css/tableview.css" />
    </stylesheets>
   <center>
          <VBox spacing="45.0" BorderPane.alignment="CENTER">
              <children>
                  <TextField fx:id="txtSearchField" maxWidth="300.0" prefHeight="51.0" prefWidth="200.0" promptText="Search..." styleClass="textFields">
                      <VBox.margin>
                          <Insets bottom="-35.0" left="500.0" right="20.0" />
                      </VBox.margin>
                  </TextField>
                  <Label text="Search through existing reports:" underline="true">
                      <font>
                          <Font name="System Bold" size="24.0" />
                      </font>
                      <VBox.margin>
                          <Insets bottom="-45.0" left="20.0" />
                      </VBox.margin>
                  </Label>
                  <TableView fx:id="tblViewExistingReports" prefHeight="380.0" prefWidth="400.0">
                      <VBox.margin>
                          <Insets left="20.0" right="20.0" />
                      </VBox.margin>
                      <columns>
                          <TableColumn fx:id="colReportName" prefWidth="121.0" text="Report Name" />
                          <TableColumn fx:id="colTechnician" prefWidth="45.0" text="Technician" />
                          <TableColumn fx:id="colCreatedDate" minWidth="0.0" prefWidth="126.0" text="Created Date" />
                          <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
                      </columns>
                      <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                      </columnResizePolicy>
                  </TableView>
            <Button fx:id="btnCreateNewReport" mnemonicParsing="false" onAction="#handleCreateNewReportPopUp" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Create New Report" underline="true">
               <VBox.margin>
                  <Insets bottom="20.0" left="30.0" />
               </VBox.margin>
            </Button>
              </children>
          </VBox>
   </center>
   <right>
          <VBox spacing="45.0" BorderPane.alignment="CENTER">
              <children>
                  <TextField fx:id="txtUpdateReportName" prefHeight="50.0" prefWidth="300.0" promptText="Update Report Name..." styleClass="textFields">
                      <VBox.margin>
                          <Insets left="25.0" right="25.0" top="20.0" />
                      </VBox.margin>
               <tooltip>
                  <Tooltip text="Update report name" />
               </tooltip>
                  </TextField>
                  <TextArea fx:id="txtUpdateReportDescription" prefHeight="300.0" prefWidth="300.0" promptText="Update Report Description..." style="-fx-: Black;" styleClass="CaseHomePageTextArea" wrapText="true">
                      <VBox.margin>
                          <Insets left="25.0" right="25.0" />
                      </VBox.margin>
               <tooltip>
                  <Tooltip text="Update report description" />
               </tooltip>
                  </TextArea>
                  <Button fx:id="btnUpdateReport" mnemonicParsing="false" onAction="#handleUpdateReport" prefHeight="35.0" prefWidth="200.0" styleClass="orangeButtons" text="Update Report" underline="true">
                      <VBox.margin>
                          <Insets left="25.0" />
                      </VBox.margin>
                  </Button>
              </children>
          </VBox>
   </right>
</BorderPane>
